<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:id="@+id/HFLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.547">


            <ImageButton
                android:id="@+id/sleep"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="324dp"
                android:src="@drawable/ic_hotel_24px" />

            <ImageButton
                android:id="@+id/food"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_above="@+id/carinho"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_restaurant_24px" />

            <ImageButton
                android:id="@+id/carinho"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_above="@+id/sleep"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_home_24px" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="71dp"
                android:layout_marginTop="8dp"
                android:text="Food Level" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="71dp"
                android:layout_marginTop="75dp"
                android:text="Happiness Level" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                android:layout_width="290dp"
                android:layout_height="44dp"
                android:layout_below="@+id/textView11"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="49dp"
                android:background="#FFFFFF"
                android:progress="20"
                android:progressTint="#188E9E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                android:layout_width="290dp"
                android:layout_height="44dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="85dp"
                android:layout_marginRight="49dp"
                android:background="#FFFFFF"
                android:progress="20"
                android:progressTint="#188E9E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>